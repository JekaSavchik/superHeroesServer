
    <div class="container">

        <h1 style="text-align: center; margin: 30px">Dossier</h1>

        <div class="container">
            <dl class="row">
                <dt class="col-sm-3">Real name</dt>
                <dd class="col-sm-8">{{this.nickName}}</dd>
                <dd class="col-sm-1"><a class="btn btn-dark" href="/edit{{this._id}}" role="button"><img style="height: 20px;" src="/icons/round_create_white_18dp.png" alt="create"></a></dd>

                <dt class="col-sm-3">Real name</dt>
                <dd class="col-sm-9">{{this.realName}}</dd>

                <dt class="col-sm-3">Origind escription</dt>
                <dd class="col-sm-9">{{this.originDescription}}</dd>

                <dt class="col-sm-3">Superpowers</dt>
                <dd class="col-sm-9">{{this.superpowers}}</dd>

                <dt class="col-sm-3">CatchPhrase</dt>
                <dd class="col-sm-9">{{catchPhrase}}</dd>
            </dl>
        </div>

        <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner img">
                {{#each this.images}}
                {{#if @first}}
                <div class="carousel-item active">
                    <img src={{this}} class="d-block" alt={{this}}>
                </div>
                {{else}}
                <div class="carousel-item">
                    <img src={{this}} class="d-block" alt={{this}}>
                </div>
                {{/if}}
                {{/each}}
            </div>
            <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
